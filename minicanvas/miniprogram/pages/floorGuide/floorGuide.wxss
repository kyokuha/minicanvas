.mvb-area {
  width: 750rpx;
  height: 400rpx;
  margin: 30rpx;
  height: 30vh;
  /* background-color: brown; */
  overflow: hidden;
}

.mvb-view {
  display: flex;
  align-items: center;
  justify-content: center;
  /* width: 5587px;
  height: 1867rpx; */
  width: 100%;
  height: 100%;
  /* background-color: chartreuse; */
  /* border: 9px double black; */
}

.map-image {
  width: 100%;
  height: 100%;
}

.map-pic {
  display: flex;
  justify-content: center;
  width: 750rpx;
  margin-top: 20rpx;
  background-color: rgb(255, 255, 255);
}

.room-list {
  display: flex;
  justify-content: center;
  height: 40vh;
  width: 750rpx;
  margin: 40rpx;
}

.room-list-scroll {
  width: 100%;
  height: auto;
  padding: 35rpx;
  margin: 0rpx 30rpx;
}

.floor-title {
  text-align: center;
  width: 750rpx;
  height: 100rpx;
  padding: 25rpx 0 30rpx;
  color: white;
  background-color: #333333;
}

.block-item {
  display: flex;
  margin: 10rpx;
  flex-direction: row;
  font-family: serif;
  font-size: large;
  border-style: double solid;
  border-left-width: thin;
  border-right-width: thin;
}

.rooms {
  margin: 5rpx 50rpx;
  font-weight: bold;
  color: #2e6d68;
}

.rooms-underline {
  width: 40%;
  border-bottom: 10rpx solid #2e6d68;
}

.scl {
  height: 400rpx;
  width: 700rpx;
}